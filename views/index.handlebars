<h1>Eat-Da-Burger!</h1>

<h2>Burgers to Eat</h2>

<ul>
  {{#each burgers}}
  {{#unless devoured}}
  {{> burgers/burger-block devour=true}}
  {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Eaten</h2>


  {{#each burgers}}
  {{#if devoured}}
  <li>
  {{burger_name}}
  </li>
  {{/if}}
  {{/each}}


<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>


  <button type="submit">Add a Burger</button>
</form>